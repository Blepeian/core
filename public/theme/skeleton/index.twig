{% extends 'partials/_master.twig' %}

{% block main %}

    {% if record|default %}

        <h1><a href="{{ record|link }}">{{ record|title }}</a></h1>

        {# Remove this block if you don't need it anymore. #}
        {{ include('partials/_fresh_install.twig') }}

        {{ record|excerpt }}

        <section class="imageholder">
            {{ popup(record|image, 1200, 500) }}
            <small>{{ record|image.alt|default('Image without description') }}</small>
        </section>

        {{ record.content }}

        {{ include('partials/_recordfooter.twig', { 'record': record }) }}

    {% endif %}

{% endblock main %}
