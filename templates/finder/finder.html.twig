{% extends '@bolt/_base/layout.html.twig' %}

{% block title %}
    {{ 'caption.finder'|trans }} Â» <strong>{{ name }}</strong>
{% endblock %}

{% block main %}

    <h2>{{ 'caption.path'|trans }}: {{ location }}{{ path }}</h2>

    {% include '@bolt/finder/_quickselect.html.twig' %}

    {% if view == 'list' %}
        {% include '@bolt/finder/_files_list.html.twig' %}
    {% else %}
        {% include '@bolt/finder/_files_cards.html.twig' %}
    {% endif %}

{% endblock %}

{% block aside %}

<div class="card mb-4">
    <div class="card-header">{{ 'caption.meta_information'|trans }}</div>
    <div class="card-body">
        View: {{ view|default('none') }}
        <div class="btn-group">
            <a href="?view=list" class="btn btn-secondary"><i class="fas fa-list fa-fw"></i> List</a>
            <a href="?view=cards" class="btn btn-secondary ml-1"><i class="fas fa-th fa-fw"></i>Cards</a>
        </div>
    </div>
</div>

    {% include '@bolt/finder/_folders.html.twig' %}

    {% include '@bolt/finder/_uploader.html.twig' %}

{% endblock aside %}

