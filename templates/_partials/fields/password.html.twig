{% extends '@bolt/_partials/fields/_base.html.twig' %}

{% block field %}
        <editor-password
            :id="'{{ id }}'"
            :name="'{{ name }}'"
            :value="{{ value|json_encode }}"
            :label="{{ label|json_encode }}"
            :label_class="{{ label_class|default()|json_encode }}"
            :class="{{ class|json_encode }}"
            :hidden="{{ hidden|default('false') }}"
        ></editor-password>
{% endblock %}