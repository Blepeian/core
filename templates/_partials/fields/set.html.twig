{% extends '@bolt/_partials/fields/_base.html.twig' %}

{% block field %}

   {% set hash = field.value.hash %}
   {% for fieldName, singleField in field.value %}
      {% if fieldName == 'hash' %}
         {#<input type="" value="{{ singleField }}" name="{{ name }}"> #}
      {% else %}
         {% if fieldset_type is defined %}
            {% set fieldName = name ~ '[' ~ hash ~ ']' ~ '[' ~ singleField.name ~ ']'%}
            {% include '@bolt/_partials/fields/' ~ singleField.type ~ '.html.twig' with {'field': singleField, 'name': fieldName } only %}
         {% else %}
            {% include '@bolt/_partials/fields/' ~ singleField.type ~ '.html.twig' with {'field': singleField,  'fieldset_type': field.type } only %}
         {% endif %}
      {% endif %}
   {% endfor %}
{% endblock %}
