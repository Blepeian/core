{% extends '@bolt/_partials/fields/_base.html.twig' %}

{% block field %}
    {% if in_collection is defined %}
        {% set setName = name %}
    {% else %}
        {% set setName = 'sets[' ~ field.name ~ ']' %}
    {% endif %}

    {% for setItem in field.value %}
        {% set setItemName = setName ~ '[' ~ setItem.name ~ ']' %}
        {% include '@bolt/_partials/fields/' ~ setItem.type ~ '.html.twig' with {'field' : setItem, 'name' : setItemName} only %}
    {% endfor %}
{% endblock %}
