{%  set labels = jsonlabels(['action.close_alert']) %}

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <bolt-notification 
          type="{{ type }}" 
          message="{{ message|trans }}" 
          :labels="{{ labels|json_decode }}"
          :time="3000"
        ></bolt-notification>
    {% endfor %}
{% endfor %}