{%- spaceless -%}

{% if not name|default() %}
    {%  set name = 'fields[' ~ field.name ~ ']' %}
{% endif %}

{% if not value|default() %}
    {% if field.value is defined %}
        {% set value = field.value|join|default() %}
    {% else %}
        {% set value = '' %}
    {% endif %}
{% endif %}

{% if not id|default() %}
    {% set id = 'field-' ~ field.name|default(name) %}
{% endif %}
{%- endspaceless -%}

