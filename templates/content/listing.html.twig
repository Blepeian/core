    {% set taxonomy = app.request.get('taxonomy')|default() %}
    {% set filterValue = app.request.get('filter')|default() %}
    <div class="card">
        <div class="card-header">
            {{ 'title.contentlisting'|trans }}
        </div>
        <div class="card-body">
