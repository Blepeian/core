{% extends '@bolt/_base/layout.twig' %}



{% block title %}
    {% if contenttype %}
        <i class='fas mr-2 {{contenttype.icon_one}}'></i> <strong>{{ contenttype.name }}</strong>
    {% else %}
        <strong>{{ 'title.contentlisting'|trans }}</strong>
    {% endif %}
{% endblock %}

{% block body_id 'user_edit' %}

{% block main %}
    <div id="listing">
        {% include '@bolt/_partials/_content_listing.twig' with {'records': records } %}
    </div>
{% endblock %}

{% block aside %}

    <div class="card">
        <div class="card-header">
            {{ 'title.contentlisting'|trans }}
        </div>
        <div class="card-body">
            (filtering options go here)
        </div>
    </div>

{% endblock %}