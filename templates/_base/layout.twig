<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ block('title')|striptags }}</title>
    {% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700|Source+Sans+Pro:400,600&amp;subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/bolt.css') }}">
    {% endblock %}
</head>

<body>
<div class="admin has-{{ block('container') }}">

    <!-- Admin Toolbar -->
    <nav id="toolbar" class="admin__toolbar">
        <admin-toolbar></admin-toolbar>
    </nav>
    <!-- End Admin Toolbar -->

    <!-- Admin Header -->
    <header id="header" class="admin__header">
        <div class="container">
          <admin-header title="{{ block('title') }}"></admin-header>
        </div>
    </header>
    <!-- End Admin Header -->

    <!-- Admin Sidebar -->
    <div class="admin__sidebar">
        <div id="sidebar">
            <admin-sidebar 
                :brand="'{{ asset('assets/brand.svg') }}'"
                :menu="{{ sidebarmenu() }}"
                :version="'{{ version|default('unknown') }}'"
            ></admin-sidebar>
        </div>
    </div>
    <!-- End Admin Sidebar -->

    <!-- Admin Main -->
    <div class="admin__body" id="{% block container %}content{% endblock %}">
        <div class="container">
          {{ include('_partials/_flash_messages.twig') }}
          <main class="admin__body--main">
            {% block main %}
            {% endblock %}
          </main>
          <aside class="admin__body--aside">
            {% block aside %}
            
            {% endblock %}
          </aside>
        </div>
    </div>
    <!-- End Admin Main -->

</div>

{% block javascripts %}
    <script>
        var admin = document.querySelector('.admin');
        var size = localStorage.getItem('admin-sidebar-size');

        if (size !== null && size === 'slim'){
            admin.classList.add('is-slim');
        }

    </script>
    <script src="{{ asset('assets/bolt.js') }}"></script>
{% endblock %}

</body>

</html>
